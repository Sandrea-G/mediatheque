{% extends 'base.html.twig' %}

{% block title %}Inscrivez-vous | Médiathèque La Chapelle Curreaux{% endblock %}

{% block body %}
<style>
    .home-page{ font-family: 'Poppins', sans-serif; text-align: center; padding-top:100px;}
    .btn{ border: 1px solid; width: 100%; height: 50px; padding-top: 10px; background: #4284a9; border: none;
          color: #f8f8f6; font-family: Lora; margin-top: 50px;transition: 0.2s;}
    .btn:hover{ background: #f8f8f6; border: 2px solid #4284a9; color: #4284a9;}

</style>
   

<main class="container"> 
    <div class="home-page">
        <h1>Inscription</h1>
           {{ form_start(registrationForm) }}

               
                {{ form_row(registrationForm.name) }}
              
                {{ form_row(registrationForm.firstname) }}
               
                {{ form_row(registrationForm.birthday) }}
               
                {{ form_row(registrationForm.address) }}

                {{ form_row(registrationForm.email) }}

                {{ form_row(registrationForm.plainPassword, {
                    label: 'Password'
            }) }}
       
         <div class="d-grid gap-2 col-6 mx-auto">
            <button type="submit" class="btn btn-lg">Je m'inscris</button>
         </div>
    {{ form_end(registrationForm) }}
    </div>
</main>

  
{% endblock %}
