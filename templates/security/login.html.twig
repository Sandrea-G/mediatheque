{% extends 'base.html.twig' %}

{% block title %}Connectez-vous | Medithèque La Chapelle Curreaux{% endblock %}

{% block body %}
<style>
    .home-page{ font-family: 'Poppins', sans-serif; font-size: 2.5rem; text-align: center; padding-top:100px;}
    .btn{ border: 1px solid; width: 100%; height: 50px; padding-top: 10px; background: #4284a9; border: none;
          color: #f8f8f6; font-family: Lora; margin-top: 50px;transition: 0.2s;}
    .btn:hover{ background: #f8f8f6; border: 2px solid #4284a9; color: #4284a9;}

</style>
<div class="container">
    <div class="home-page">
        <form method="post">
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3">
                    Connexion {{ app.user.username }}, <a href="{{ path('app_logout') }}">Déconnexion</a>
                </div>
            {% endif %}

            <h1 class="mb-3">Connexion</h1>
                <div class="d-grid gap-2 col-6 mx-auto">
           
                    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" autocomplete="email"
                            placeholder="Votre email "required autofocus>
                
                    <input type="password" name="password" id="inputPassword" class="form-control" autocomplete="current-password"
                            placeholder="Votre mot de passe" required>

                    <input type="hidden" name="_csrf_token"
                        value="{{ csrf_token('authenticate') }}">
                </div>
            {#
                Uncomment this section and add a remember_me option below your firewall to activate remember me functionality.
                See https://symfony.com/doc/current/security/remember_me.html

                <div class="checkbox mb-3">
                    <label>
                        <input type="checkbox" name="_remember_me"> Remember me
                    </label>
                </div>
            #}
                <div class="d-grid gap-2 col-6 mx-auto">
                     <button class="btn" type="submit">
                         Connexion
                    </button>
                </div>
        </form>
    </div>
</div>
{% endblock %}
