 {% extends "@EasyAdmin/layout.html.twig" %}


{% block content %}
<style>
  .btn-sm{ border: 1px solid; width: 100%; height: 50px; background: #4284a9; border: none;
          color: #f8f8f6; font-family: Lora; margin-top: 50px;transition: 0.2s;}
  .btn-sm:hover{ background: #f8f8f6; border: 2px solid #4284a9; color: #4284a9;}
</style>
<div class="row">

  {% for book in books %}
    <div class="card col-md-4" style="width: 18rem;">
      <img class="card-img-top" src="{{book.file}}" alt="{{book.title}}">
        <div class="card-body">
          <h5 class="card-title">{{book.title}}</h5>
            <p class="card-text">{{book.description}}</p>
            <p>{{book.category}} <small>de {{book.author}} Parution:{{book.publication}}</small></p>
            <a href="#" class="btn-sm">{{book.availble}} Disponible</a>
        </div>
    </div>
    
  {% endfor %}
    
</div>


{% endblock %}